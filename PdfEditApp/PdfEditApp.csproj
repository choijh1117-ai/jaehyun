  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\\PdfEdit.Core\\PdfEdit.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="appsettings.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
