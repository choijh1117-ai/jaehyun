<Window x:Class="PdfEditApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:PdfEditApp.Converters"
        mc:Ignorable="d"
        Title="PdfEditApp" Height="720" Width="1100" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:OperationVisibilityConverter x:Key="OperationVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <materialDesign:Card Grid.RowSpan="2" Grid.Column="0" Padding="12" Margin="0,0,16,0">
            <StackPanel>
                <TextBlock Text="작업" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
                <ListBox ItemsSource="{Binding OperationTypes}"
                         SelectedItem="{Binding SelectedOperation}"
                         BorderThickness="0"
                         Style="{StaticResource MaterialDesignListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="8" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </materialDesign:Card>

        <ScrollViewer Grid.Row="0" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="입력 파일" FontSize="16" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="파일 추가" Command="{Binding AddFilesCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0" />
                            <Button Content="선택 제거" Command="{Binding RemoveSelectedFileCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" />
                        </StackPanel>
                        <ListBox ItemsSource="{Binding InputFiles}"
                                 SelectedItem="{Binding SelectedInputFile}"
                                 Height="140" Margin="0,8,0,0" />
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="출력 설정" FontSize="16" FontWeight="SemiBold" />
                        <DockPanel Margin="0,8,0,0">
                            <TextBox Text="{Binding OutputFolder}" Margin="0,0,8,0" materialDesign:HintAssist.Hint="출력 폴더" DockPanel.Dock="Left" Width="480" />
                            <Button Content="폴더 선택" Command="{Binding BrowseOutputFolderCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" />
                        </DockPanel>
                        <TextBox Text="{Binding OutputFileName}" Margin="0,8,0,0" materialDesign:HintAssist.Hint="출력 파일명 (Merge/Rotate/Reorder)" />
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="QPDF 설정" FontSize="16" FontWeight="SemiBold" />
                        <DockPanel Margin="0,8,0,0">
                            <TextBox Text="{Binding QpdfPath}" Margin="0,0,8,0" materialDesign:HintAssist.Hint="qpdf.exe 경로" DockPanel.Dock="Left" Width="480" />
                            <Button Content="찾기" Command="{Binding BrowseQpdfCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" />
                        </DockPanel>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="작업 옵션" FontSize="16" FontWeight="SemiBold" />

                        <StackPanel Margin="0,8,0,0"
                                    Visibility="{Binding SelectedOperation, Converter={StaticResource OperationVisibilityConverter}, ConverterParameter=Split}">
                            <TextBox Text="{Binding SplitOutputPattern}" materialDesign:HintAssist.Hint="Split 출력 패턴 (예: output-%d.pdf)" />
                        </StackPanel>

                        <StackPanel Margin="0,8,0,0"
                                    Visibility="{Binding SelectedOperation, Converter={StaticResource OperationVisibilityConverter}, ConverterParameter=Rotate}">
                            <TextBox Text="{Binding RotateAngle}" materialDesign:HintAssist.Hint="회전 각도 (90, 180, 270)" />
                        </StackPanel>

                        <StackPanel Margin="0,8,0,0"
                                    Visibility="{Binding SelectedOperation, Converter={StaticResource OperationVisibilityConverter}, ConverterParameter=Reorder}">
                            <TextBox Text="{Binding PageOrder}" materialDesign:HintAssist.Hint="페이지 순서 (예: 1,3,2 또는 5-1)" />
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="작업 시작" Command="{Binding StartCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,8,0" />
                    <Button Content="취소" Command="{Binding CancelCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <materialDesign:Card Grid.Row="1" Grid.Column="1" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ListBox ItemsSource="{Binding Logs}" />

                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
                    <ProgressBar Width="240" Height="20" Value="{Binding Progress}" Maximum="100" Margin="0,0,8,0" />
                    <Button Content="로그 지우기" Command="{Binding ClearLogsCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding Progress, StringFormat={}{0:0}%}" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
